<%- include('partials/header') %>

    <div class="main-card">

        <div class="q-card" align=center>
            <h1>Your Channel List</h1>
            <p>copy link address to share</p>
            <ul>
                <% channelList.forEach(channel => { %>
                    <li><a style="font-size: large;" href="/link/<%=channel.channelName%>"><%=channel.channelName%></a>-<a
                        style="color: red;font-size: small;"
                        href="/u/deleteChannel/<%= channel._id %>">Delete</a></li>
                <% }); %>
                <li><a href="/u/createChannel"><button>Create Another Channel</button></a></li>
            </ul>
            
        </div>
    </div>

<%- include('partials/footer') %>