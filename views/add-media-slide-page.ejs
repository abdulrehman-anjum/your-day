<%- include('partials/header') %>
   
    <div class="main-card">

        <!-- pages list -->
        <h1 class="q-card" align=center>
            <a><%= slide.slide_name%></a>
            
            <ul>
                <% slide.pages.forEach(page=>{ %>
                <li><a href="/u/slide/<%= slide._id %>/<%= page._id %>/add-media"><%= page.page_name %></a></li>
                <% }) %>

            </ul>
        </h1>

        <%
        const twoImages = images[1].url!="/images/default-image.png"?false:true
        if (twoImages){%>
            <form class="q-card" action="/u/slide/<%= slide._id %>/<%= pageId %>/add-media"method="post" enctype="multipart/form-data">
                <h1>Add images</h1><br>
                <% console.log(images) %>
                <div class="image-upload">
                    <div class="image-box">
                        <label for="image">
                            <img id="selectedImage" width="150" src="/images/default-image.png" accept="image/*" alt="Picture 1"><br>
                            <p align="center">Tap to Change</p>
                        </label>
                        <input hidden type="file" name="image" id="image">
                    </div>
                </div>
                <input type="submit" value="Upload">
        </form>
        <%}%>


        <div class="q-card">
            <div class="image-box">
                <%if(images[0].url!=="/images/default-image.png"){%>
                    <a href="/u/slide/<%= slide._id %>/<%= pageId %>/x/<%= images[0].id %>">Delete</a><br>
                <%}%>
                <img width="150" src="<%= images[0].url %>" accept="image/*" alt="Picture 1">
            </div>

            <div class="image-box">
                <%if(images[1].url!=="/images/default-image.png"){%>
                    <a href="/u/slide/<%= slide._id %>/<%= pageId %>/x/<%= images[1]._id %>">Delete</a><br>            
                <%}%>
                <img width="150" src="<%= images[1].url %>" accept="image/*" alt="Picture 2">
            </div>
        </div>
                
        

    </div>

    <script>
        const imageInput = document.getElementById('image');
        const selectedImage = document.getElementById('selectedImage');

        imageInput.addEventListener('change', function () {
            const file = imageInput.files[0];
            if (file) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    selectedImage.src = e.target.result;
                };

                reader.readAsDataURL(file);
            }
        });       
    </script>

    
<%- include('partials/footer') %>